<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <TextView
        android:id="@+id/labelSensor"
        android:layout_width="162dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="32dp"
        android:text="Light Status :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/philipHueLabel" />

    <TextView
        android:id="@+id/lightLabel"
        android:layout_width="161dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:text="Light Status :"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/labelSensor" />

    <TextView
        android:id="@+id/sensorResult"
        android:layout_width="93dp"
        android:layout_height="30dp"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/labelSensor"
        app:layout_constraintStart_toEndOf="@+id/labelSensor"
        app:layout_constraintTop_toTopOf="@+id/labelSensor" />

    <TextView
        android:id="@+id/lightResult"
        android:layout_width="90dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/lightLabel"
        app:layout_constraintStart_toEndOf="@+id/lightLabel"
        app:layout_constraintTop_toTopOf="@+id/lightLabel" />

    <TextView
        android:id="@+id/philipHueLabel"
        android:layout_width="149dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:text="Philip Hue:"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/philipHueStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/philipHueLabel"
        app:layout_constraintStart_toEndOf="@+id/philipHueLabel"
        app:layout_constraintTop_toTopOf="@+id/philipHueLabel" />

    <Button
        android:id="@+id/next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="8dp"
        android:text="Empty Page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lightResult" />

    <Button
        android:id="@+id/button_devicelist"
        android:layout_width="174dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="onClickDevices"
        android:text="To Device List"
        app:layout_constraintBottom_toTopOf="@+id/button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/next" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginBottom="8dp"
        android:onClick="putFirestore"
        android:text="PutFirestore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:onClick="getFirestore"
        android:text="GetFirestore"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button" />

    <Button
        android:id="@+id/onOffLight"
        android:layout_width="110dp"
        android:layout_height="46dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickSwitch"
        android:text="On/Off"
        app:layout_constraintBottom_toBottomOf="@+id/lightResult"
        app:layout_constraintStart_toEndOf="@+id/lightResult"
        app:layout_constraintTop_toTopOf="@+id/lightResult" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="onClickGetLight"
        android:text="Get Light"
        app:layout_constraintBottom_toBottomOf="@+id/sensorResult"
        app:layout_constraintStart_toEndOf="@+id/sensorResult"
        app:layout_constraintTop_toTopOf="@+id/sensorResult" />

    <TextView
        android:id="@+id/sensor_label"
        android:layout_width="165dp"
        android:layout_height="33dp"
        android:layout_marginTop="40dp"
        android:text="Sensor Status:"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/lightLabel"
        tools:layout_editor_absoluteX="4dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="111dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/sensor_label"
        app:layout_constraintStart_toEndOf="@+id/sensor_label"
        app:layout_constraintTop_toTopOf="@+id/sensor_label" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:onClick="onClickGetSensor"
        android:text="Get Sensor"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>